<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#fff"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/cup_cof"
        android:layout_centerHorizontal="true"


        android:layout_marginTop="100dp"
        />

    <TextView
        android:id="@+id/quantity"
        android:layout_above="@id/quantity_text_view"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="QUANTITY"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/pricee"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/pricee"
        android:text="-"
        android:onClick="minus"
        />

    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/plis"
        android:text="0"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"

        />

    <Button
        android:id="@+id/plis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/pricee"
        android:layout_above="@id/pricee"
        android:text="+"
        android:onClick="plus"
        />

    <TextView
        android:id="@+id/pricee"
        android:layout_above="@id/price_text_view"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="PRICE"
        />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ord"
        android:layout_centerHorizontal="true"
        android:text="$0"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        />

    <Button
        android:id="@+id/ord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="ORDER"

        />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/cup_cof"
        android:layout_centerHorizontal="true"


        android:layout_marginTop="100dp"
        />

</RelativeLayout>